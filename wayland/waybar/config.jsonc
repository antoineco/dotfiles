{
    "modules-left": [
        "niri/workspaces"
    ],
    "modules-center": [
        "niri/window"
    ],
    "modules-right": [
        "group/resources",
        "custom/1password",
        "bluetooth",
        "wireplumber",
        "battery",
        "network",
        "clock"
    ],
    "group/resources": {
        "orientation": "inherit",
        "drawer": {},
        "modules": [
            "custom/expand",
            "cpu",
            "memory",
            "temperature"
        ]
    },
    "battery": {
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{icon}",
        "format-charging": "{icon} ",
        "format-full": "{icon} ",
        "format-plugged": "",
        "format-alt": "{time} {icon}",
        "tooltip-format": "{capacity}%\n{timeTo}",
        "format-icons": ["", "", "", "", ""]
    },
    "bluetooth": {
        "format": "󰂯",
        "format-connected": "󰂱",
        "format-off": "󰂲",
        "format-disabled": "",
        "tooltip-format": "{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_battery_percentage}%"
    },
    "clock": {
        "format-alt": "{:%Y-%m-%d}",
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "days": "<span color='#ecc6d9'><b>{}</b></span>",
                "weeks": "<span color='#99ffdd'><b>W{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        },
        "actions":  {
            "on-click-right": "mode"
        }
    },
    "cpu": {
        "format": "{usage}% ",
        "tooltip": false
    },
    "custom/1password": {
        "exec": "printf 󰢁",
        "exec-if": "/run/current-system/sw/bin/pgrep 1password",
        "interval": 15,
        "tooltip": false
    },
    "custom/expand": {
        "format": "",
        "tooltip": false
    },
    "memory": {
        "format": "{}% "
    },
    "network": {
        "format-wifi": "",
        "format-ethernet": "󰈂",
        "format-linked": "󰈁",
        "format-disconnected": "󰤮",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid} ({signalStrength}%)\n{ifname} via {gwaddr}"
    },
    "temperature": {
        "tooltip": false,
        "critical-threshold": 80,
        "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""]
    },
    "wireplumber": {
        "format": "{icon}",
        "format-muted": "",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "tooltip-format": "{volume}%  {format_source}\n{node_name}",
        "reverse-scrolling": true,
        "format-icons": ["", "", ""]
    }
}
