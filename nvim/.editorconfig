# https://github.com/CppCXY/EmmyLuaCodeStyle/blob/1.2.2/docs/format_config_EN.md
# https://github.com/CppCXY/EmmyLuaCodeStyle/blob/1.2.2/lua.template.editorconfig
[*.lua]

# [basic]

indent_style = space
indent_size = 2
continuation_indent = 2
quote_style = double
call_arg_parentheses = remove
trailing_table_separator = never

# [space]

space_before_inline_comment = 2
